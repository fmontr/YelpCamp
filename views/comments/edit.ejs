<% include ../partials/header.ejs %>

<div class='container'>
    <div style='text-align: center;'>
        <h1 style='margin: 40px;'>Edit comment on <%= foundCampground.name %></h1>
        <form style='width: 30%; margin: auto' action='/campgrounds/<%= foundCampground._id %>/comments/<%= foundComment._id %>?_method=PUT' method='POST'>
            <div class='form-group'>
                <input class='form-control' type='text' name='comment[text]' value='<%= foundComment.text %>'>
            </div>
            <div class='form-group'>
                <input class='btn btn-primary btn-block' type='submit'>
            </div>
        </form>
        <a class= href='/campgrounds'>Go back</a>
    </div>
</div>

