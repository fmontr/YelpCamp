<% include ../partials/header.ejs %>

<div class='container'>
    <div style='text-align: center;'>
        <h1 style='margin: 40px;'>Edit <%= foundCampground.name %></h1>
        <form style='width: 30%; margin: auto' action='/campgrounds/<%= foundCampground._id %>?_method=PUT' method='POST' enctype='multipart/form-data'>
            <div class='form-group'>
                <input class='form-control' type='text' name='campground[name]' value='<%= foundCampground.name %>'>
            </div>
            <div class='form-group'>
                <input class='form-control' type='number' name='campground[price]' value='<%= foundCampground.price %>'min='0.01' step='0.01'>
            </div>
            <div class='form-group'>
                <label for='image'>Image</label>
                <input class='form-control' type='file' name='image' id='image' accept='image/*'>
            </div>
            <div class='form-group'>
                <input class='form-control' type='text' name='campground[description]' value='<%= foundCampground.description %>'>
            </div>
            <div class='form-group'>
                <input class='form-control' type='text' name='campground[location]' id='location' value='<%= foundCampground.location %>'>
            </div>
            <div class='form-group'>
                <button class='btn btn-primary btn-block'>Update</button>
            </div>
        </form>
        <a href='/campgrounds/<%= foundCampground._id %>'>Go back</a>
    </div>
</div>
<% include ../partials/footer.ejs %>
